# EstateTracker Enhanced Configuration

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001/ws

# Security Configuration
VITE_ENABLE_SECURITY_HEADERS=true
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_FILE_SIZE=10485760

# PWA Configuration
VITE_ENABLE_PWA=true
VITE_CACHE_VERSION=v1.0.0
VITE_ENABLE_NOTIFICATIONS=true

# Analytics Configuration
VITE_ANALYTICS_ID=your_analytics_id
VITE_ENABLE_ANALYTICS=true

# Performance Configuration
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_LAZY_LOADING=true
VITE_VIRTUAL_SCROLLING_THRESHOLD=100

# Real-time Features
VITE_ENABLE_WEBSOCKETS=true
VITE_COLLABORATION_ENABLED=true
VITE_HEARTBEAT_INTERVAL=30000

# Accessibility Configuration
VITE_ENABLE_ACCESSIBILITY_FEATURES=true
VITE_HIGH_CONTRAST_MODE=auto
VITE_REDUCED_MOTION=auto

# Nigerian Localization
VITE_DEFAULT_CURRENCY=NGN
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ig,yo,ha
VITE_TIMEZONE=Africa/Lagos

# Development Configuration
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# Testing Configuration
VITE_ENABLE_TEST_IDS=true
VITE_TEST_API_DELAY=0

# Error Tracking
VITE_SENTRY_DSN=your_sentry_dsn
VITE_ERROR_REPORTING=true

# Feature Flags
VITE_FEATURE_ADVANCED_ANALYTICS=true
VITE_FEATURE_REAL_TIME_COLLABORATION=true
VITE_FEATURE_DOCUMENT_SYNC=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_PUSH_NOTIFICATIONS=true

# Third-party Services
VITE_PAYSTACK_PUBLIC_KEY=your_paystack_public_key
VITE_MAPS_API_KEY=your_maps_api_key
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_name

# Security Headers
VITE_CSP_ENABLED=true
VITE_HSTS_MAX_AGE=31536000
VITE_X_FRAME_OPTIONS=DENY
